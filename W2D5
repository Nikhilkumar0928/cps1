//W2 d5 Q1
#include <iostream>
using namespace std;
void check(int num){
    if(num%2==0)cout<<"Even";
    else cout<<"Odd";
}
int main()
{
int n;
cout<<"Enter a number: ";
cin>>n;
check(n);
    return 0;
}
//W2 DAY5 q2


#include<iostream>
using namespace std;

void print(string str){
    for(int i=str.size();i>=0;i--){
        cout<<str[i];
    }
}
int main(){
    string str;
    cout<<"Enter a string: ";
    cin>>str;
    print(str);
    return 0;
}

//W2 D5Q3

#include <iostream>
using namespace std;
void alpha(string str){
    int vowel=0,cons=0;
    for(int i=0;i<str.size();i++){
    if((int)str[i]==97||(int)str[i]==101||(int)str[i]==105||(int)str[i]==111||(int)str[i]==117)vowel++;
    else cons++;
}
cout<<"Number of vowels: "<<vowel<<endl;
cout<<"Number of consonants: "<<cons<<endl;
}

int main() {
string str;
cout<<"Enter a string: ";
cin>>str;
alpha(str);
return 0;
}
