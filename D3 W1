//Q1

#include<iostream>
using namespace std;
int main(){
    int num,sum=0;
    cout<<"Enter a number: ";
    cin>>num;
    for(int i=0;i<=num;i++){
        sum+=i;
    }
    cout<<"The sum of the first "<<num<<" natural numbers is: "<<sum;
    return 0;
}

//Q2

#include<iostream>
using namespace std;
int main(){
    int num,fact=1;
    cout<<"Enter a number: ";
    cin>>num;
    if(num<0)cout<<"Invalid";
    else{
    for(int i=num;i>0;i--){
        fact=fact*i;
    }
    cout<<"The factorial of "<<num<<" is: "<<fact;
    }
    return 0;
}


//Q3

#include<iostream>
using namespace std;
int main(){
    int num;
    cout<<"Enter a number: ";
    cin>>num;
    for(int i=1;i<=10;i++){
        cout<<num<<" x "<<i<<" = "<<num*i<<endl;
    }
    return 0;
}
